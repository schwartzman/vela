{
    "source": "./content",
    "metadata": {
        "site_title": "Vela Foundation",
        "description": "The Vela Foundation integrates sailing expeditions with participant-driven programs in the arts, sciences, and humanities.",
        "GA_ID": "UA-2234212-7"
    },
    "plugins": {
        "metalsmith-collections": {
            "main": {
                "sortBy": "order",
                "refer": false
            },
            "aux": {
                "sortBy": "order",
                "refer": false
            }
        },
        "metalsmith-default-values": [{
            "pattern": "**/*.md",
            "defaults": {
                "layout": "page.njk"
            }
        }],
        "metalsmith-markdown": true,
        "metalsmith-permalinks": {
            "relative": false
        },
        "metalsmith-sass": {
            "outputStyle": "compressed",
            "outputDir": "css/"
        },
        "metalsmith-layouts": {
            "directory": "./templates"
        }
    }
}
